{
	"add-field-type": [
        {
            "name":"regularText",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"}
                ]
            }
        },
        {
            "name": "ratingValue",
            "class":"solr.DoublePointField"
        },
        {
            "name": "percentage",
            "class":"solr.DoublePointField"
        },
        {
            "name": "countable",
            "class":"solr.IntPointField"
        },
        {
            "name": "enumerable",
            "class":"solr.IntPointField"
        }
    ],
    "add-field": [
        {
            "name": "name",
            "type": "regularText",
            "indexed": true
        },
        {
            "name": "rating",
            "type": "ratingValue"
        },
        {
            "name": "custom_rating",
            "type": "ratingValue"
        },
        {
            "name": "reviews",
            "type": "countable"
        },
        {
            "name": "description",
            "type": "regularText"
        },
        {
            "name": "headquarters",
            "type": "regularText"
        },
        {
            "name": "industry",
            "type": "regularText"
        },
        {
            "name": "employees",
            "type": "enumerable"
        },
        {
            "name": "revenue",
            "type": "enumerable"
        },
        {
            "name": "ceo.count",
            "type": "countable"
        },
        {
            "name": "ceo.approval",
            "type": "percentage"
        },
        {
            "name": "interview.experience",
            "type": "regularText"
        },
        {
            "name": "interview.difficulty",
            "type": "regularText"
        },
        {
            "name": "interview.duration",
            "type": "regularText"
        },
        {
            "name": "interview.count",
            "type": "countable"
        }
    ],
    "add-dynamic-field": [
        {
            "name": "happiness.*",
            "type": "ratingValue"
        },
        {
            "name": "ratings.*",
            "type": "ratingValue"
        },
        {
            "name": "locations.*",
            "type": "ratingValue"
        },
        {
            "name": "roles.*",
            "type": "ratingValue"
        },
        {
            "name": "salary.*",
            "type": "ratingValue"
        }
    ]
}
